{% render 'partials/head.liquid', title: 'Squad page' %}

<script src="script.js"></script>

<h1>Squad 1G</h1>

<select class="sort-box">Sorteren
  <option value="">Sorteer</option>
  <option value="az">A-Z</option>
  <option value="za">Z-A</option>
  <option value="leeftijd">Leeftijd</option>
</select>

<main>
  <ul>
    {% for person in persons %}
    <li>
      <img src="{{ person.avatar }}" onerror="this.src='altperson.png'" alt="Profile Image">
      <a href="/student/{{ person.id }}">{{ person.name }}</a>
      <span class="person-info">
        <img class="refresh-btn" src="refresh.png" alt="Refreshnop">
        <span class="info-text">Geboortedatum: {{ person.birthdate | date: "%d-%m-%Y" }}</span>
      </span>
    </li>
    {% endfor %}
  </ul>
</main>

{% render 'partials/foot.liquid', squads: squads %}