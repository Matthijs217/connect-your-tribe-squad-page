{% render 'partials/head.liquid', title: 'Squad page' %}

<script src="/public/script.js"></script>

<h1>Squad 1G</h1>

<div class="sortbox">
  <p class="sort">Sorteren</p>
  <img src="/public/sort.png" alt="sorticon">
</div>

<main>
  <ul>
    {% for person in persons %}
    <li>
      <img src="{{ person.avatar }}" onerror="this.src='/public/altperson.png'" alt="Profile Image">
      <a href="/student/{{ person.id }}">{{ person.name }}</a>
      <span class="person-info">
        <img class="refresh-btn" src="/public/refresh.png" data-birthdate="{{ person.birthdate | date: " %d-%m-%Y" }}"
          data-favcolor="{{ person.fav_color }}" data-favcountry="{{ person.fav_country }}">
        <span class="info-text">Geboortedatum: {{ person.birthdate | date: "%d-%m-%Y" }}</span>
      </span>
    </li>
    {% endfor %}
  </ul>
</main>

{% render 'partials/foot.liquid', squads: squads %}